<%- include header%>
<div class="container">
	<header>
		<%= title %>
	</header>
	<form method="post" class="post-form">
		<div>
			<span class="label">Title:</span>
			<input type="text" name="title" class="title-form" value="<%= post.title %>"/>
		</div>
		<div>
			<span class="label">Tags:</span>
			<input class="tag-form" type="text" name="tag1" value="<%= post.tags[0] %>" />
			<input class="tag-form" type="text" name="tag2" value="<%= post.tags[1] %>" />
			<input class="tag-form" type="text" name="tag3" value="<%= post.tags[2] %>" />
		</div>
		<div>
		<span class="label l-content">Content:</span>
		<textarea name="content" rows="20"><%= post.content %></textarea>
		</div>
		<div class="middle">
			<input type="submit" value="Post" class="submit" />
		</div>
	</form>
</div>
<%- include footer%>